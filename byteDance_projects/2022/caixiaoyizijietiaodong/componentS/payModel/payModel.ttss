}
.input_view{
  width: 700rpx;
  height:400rpx;
   margin: 250rpx auto 0; 
  border-radius: 10rpx;
  padding: 30rpx;
  /* border:1px solid red; */
  background:white;
  box-sizing: border-box;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.titleLine{
  width:100%;
  text-align: center;
  font-weight:bold;
  font-size:32rpx;
  position: relative;
}

.close{
  color:#999999;
  position: fixed;
  left:60rpx;
}
.payCodeContent{
  /* font-size: */
  margin:30rpx 0;
}
.CodeNum{
  font-size:50rpx;
}
.codeTitle{
  font-size:26rpx;
}
.onputList{
  width:480rpx;
  height:80rpx;
  display:flex;
  align-items: center;
}
.inputItem{
  flex:1;
  position: relative;
  width:80rpx;
  height:80rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border:1px solid #e8e8e8;
  box-sizing: border-box;
}
.dotItem{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  line-height:80rpx;
  background:black;
  border-radius:50%;
}
.title{
  display: block;
  line-height: 90rpx;
  font-size:30rpx;
  color: #aaa;
}
.input_box{
  /* background: #ffc; */
  display: flex;
  padding: 20rpx 0;
  height: 90rpx;
  border-bottom: 1px solid #efefef;
}
.input_label{
  font-size: 35rpx;
  font-weight: bold;
  margin-right: 5rpx;
}
.content{
  font-size: 80rpx;
  line-height: 90rpx;
  font-weight: bold;
}
.className{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%); 
  width: 1rpx;
  height: 60rpx;
  background: #666;
  border-radius: 6rpx;
  animation: twinkling 1.5s infinite ; 
} 
.animated{ 
  animation-duration: 1s; 
  animation-fill-mode: both 
} 
@-webkit-keyframes twinkling{ 
  0%{ 
    opacity: 0; 
  } 
  100%{ 
    opacity: 1; 
  } 
} 
@keyframes showCursor{
  0%{
    opacity: 0;
  }
  50%{
    opacity: 1;
  }
  100%{
    opacity: 0;
  }
}
@keyframes press{
  0%{
    background:white;
    color:#000;
  }
  50%{
    background:#0094e7 !important;
    color:white !important;
  }
  100%{
    background:white;
    color:#000;
  }
}
.linked{
 /* animation: press 1.5s ease-in-out;  */
 background:#0094e7 !important;
    color:white !important;
}
.pay{
  display: block;
  width: 300rpx;
  height: 90rpx;
  border-radius: 12rpx;
  background: #62b900;
  color:#fff;
  text-align: center;
  line-height: 90rpx;
  margin:50rpx auto;
  font-size: 32rpx;
}
.keyboard{
  height: 0;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  transition:height 0.3s;
}
.hind_box{
  height: 360rpx;
}
.complete{
  background: #efefef;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: right;
  padding:0 25rpx;
  color: #0f0;
}
.key_box{
  overflow: hidden;
}
.keys{
  float: left;
  width: 250rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-left: 1px solid #eee;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}
.border0{
  border-left: 0;
}
.bg_color{
  background: #ccc;
}
