<!--componentS/supplyDetail/indrustNews/indrustNews.wxml-->
<view class="main_content" style="margin:20rpx auto;">
    <view class="list-warp" wx:for="{{dynamicList}}" wx:key="index" data-item='{{item}}'  catchtap="toIndrustDetail">
      <view class="list-left">
        <image src="{{item.logo}}" alt="" />
      </view>
      <view class="list-right">
        <view class="list-right-box">
          <view class="list-title">{{item.title}}</view>
          <view class="list-msg">
            发布时间：{{item.createdTime}}
          </view>
        </view>
      </view>
      <view class="list-edit" wx:if="{{userStatus == 1}}" data-item="{{item}}" catchtap="onEditClick">修改</view>
    </view>
    <view class="image_card" wx:if="{{userStatus == 1}}">
    <!--  -->
      <view class="add" >
        <view class="br" catchtap="onAddClick">
          <p class="icon">+</p>
        </view>
      </view>
    </view>
    <view class="popus-mb" wx:if="{{isShow}}" >
      <view class="popus-box">
        <view class="close">
          <view class="close-title">企业动态</view>
          <view class="closes" catchtap="onCloseClick">X</view>
        </view>
        <view class="flex-warp">
          <view class="flex-title">企业动态标题：</view>
          <input type="text" value="{{param.title}}" placeholder="请输入企业动态标题" class="flex-input" bindinput="saveTitle"/>
          <view class="flex-title">企业动态首图：</view>
          <view class="upload-img">
            <image src="{{param.logo}}" alt="" wx:if="{{param.logo !== ''}}" />
            <view class="upload-icon" catchtap="chooseImage">+</view>
            <!-- <input type="file" style="display:none" value="上传" bindchange="onFileChange" id="upload_files" accept="image/*" ref="uploadFileImg" /> -->
          </view>
          <view class="flex-title">企业动态内容：</view>

          <view class="toolbar" catchtouchend="format" style="bottom: {{isIOS ? keyboardHeight : 0}}px">
              <i class="iconfont icon-charutupian" catchtouchend="insertImage"></i>
              <i class="iconfont icon-format-header-2 {{formats.header === 2 ? 'ql-active' : ''}}" data-name="header" data-value="{{2}}"></i>
              <i class="iconfont icon-format-header-3 {{formats.header === 3 ? 'ql-active' : ''}}" data-name="header" data-value="{{3}}"></i>
              <i class="iconfont icon-zitijiacu {{formats.bold ? 'ql-active' : ''}}" data-name="bold"></i>
              <i class="iconfont icon-zitixieti {{formats.italic ? 'ql-active' : ''}}" data-name="italic"></i>
              <i class="iconfont icon-zitixiahuaxian {{formats.underline ? 'ql-active' : ''}}" data-name="underline"></i>
              <i class="iconfont icon--checklist" data-name="list" data-value="check"></i>
              <i class="iconfont icon-youxupailie {{formats.list === 'ordered' ? 'ql-active' : ''}}" data-name="list" data-value="ordered"></i>
              <i class="iconfont icon-wuxupailie {{formats.list === 'bullet' ? 'ql-active' : ''}}" data-name="list" data-value="bullet"></i>
              <i class="iconfont iconjuzhong {{formats.align === 'center' ? 'ql-active' : ''}}" data-name="align" data-value="center">中</i>
            </view>
          <view class="container" >
            <editor id="editor" class="ql-container" placeholder="{{placeholder}}" bindstatuschange="onStatusChange" bindready="onEditorReady" show-img-size	="{{true}}" show-img-resize	="{{true}}" show-img-toolbar	="{{true}}" bindblur="blur">
            </editor>
          </view>
          <!-- <quill-editor v-model="param.companyDynamic" ref="myQuillEditor" :options="editorOption" @blur="onEditorBlur($event)" @focus="onEditorFocus($event)" bindchange="onEditorChange($event)" style="height: 50vh;"></quill-editor> -->
          <view type="primary" class="onSubmitClickBtn" catchtap="onSubmitClick">提 交</view>
        </view>
      </view>
    </view>
    <view style="text-align:center" wx:if="{{dynamicList.length == 0}}">暂无数据</view>
  </view>
