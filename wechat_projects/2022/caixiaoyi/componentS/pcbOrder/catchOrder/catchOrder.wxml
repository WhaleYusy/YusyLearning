<!--componentS/pcbOrder/catchOrder/catchOrder.wxml-->
<view class="catchOrder">
    <view class="listContent">
      <view class="listContentItem" wx:for="{{orderList1}}" wx:key="orderId" catchtap="toOrderInfo" data-orderid="{{item.orderId}}">
        <view class="listContentItems">
          <view class="title" style="border-top-left-radius:10px;">板子尺寸</view>
          <view class="item">{{item.pcbLong}} X {{item.pcbWide}}</view>
          <view class="title">板子数量</view>
          <view class="item" style="border-top-right-radius:10px;">{{item.pcbNum}}</view>
        </view>
        <view class="listContentItems">
          <view class="title">板子层数</view>
          <view class="item">{{item.layerNum}}</view>
          <view class="title">板子厚度</view>
          <view class="item">{{item.depth}}</view>
        </view>
        <view class="listContentItems spec" >
          <view class="titleAddr" style="border-bottom-left-radius:10px;">收货地址</view>
          <view class="itemAddr " style="border-bottom-right-radius:10px;">{{item.area}} {{item.detailArea}}</view>
        </view>
        <view class="catchOrder111" catchtap="catchOrder" data-orderid="{{item.orderId}}" data-index="{{index}}">抢单</view>
    </view>
    <view class="catchLayer" wx:if="{{showCatchLayer}}">
        <view class="suppliorContent">
          <text catchtap="toCancel" class="cancel">X</text>
          <view class="tip">请选择一家供应商</view>
          <!-- 服务商列表 -->
          <block wx:for="{{dataList}}" 
              
              >
              <view class="service-li" class="content_list_box {{active == index ? 'link' : ''}}"
                  catchtap="chooseService"
                  data-serveid="{{item.id}}"
                  data-suppliername="{{item.supplierName}}"
                  data-index="{{index}}" 
                  wx:key="{{key}}">
                <view class="service-lil">
                  <image src="{{item.logo}}"></image>
                  <!-- <view class="service-lilb">
                    <view class="service-lis">{{item.status ? '申请中' : '加好友'}}</view>
                    <view class="chatInfo" data-id="{{item.id}}" bindtap="onchatInfo">+私信</view>
                  </view> -->
                </view>
                <view class="service-lir">
                  <view class="service-lir1">{{item.supplierName}}</view>
                  <view class="service-lir2">
                    <text class="service-lit2"> 浏览：{{item.viewNum || 0}}</text>
                    <text class="service-lit2"> 粉丝：{{item.fansNum || 0}}</text>
                    <text class="service-lit2"> 点赞：{{item.likeCount || 0}}</text>
                  </view>
                  <view class="service-lir3">地址：{{item.supplierAddress}}</view>
                  <view class="service-lir3">供应：{{item.operateProduces || ''}}</view>
                </view>
              </view>
          </block>
        </view>

      <!-- 操作按钮 -->
      <view class="btnGroup"> 
        <view class="cancelUpload" catchtap="toCancel" >取消</view> 
        <view class="ensureUpload" catchtap="toEnsureChoose" >确定</view>
      </view>
    </view>
    </view>
    <!-- <view class="loadMore" catchtap="loadMore" wx:if="{{!showNoMore1 && orderList1.length !== 0}}">加载更多</view> -->
    <view class="noData" wx:if="{{orderList1.length === 0}}">暂无数据</view>   
    <view class="showNoMore" wx:if="{{showNoMore && orderList1.length > 0 }}">没有更多数据啦~</view>   
  </view>
