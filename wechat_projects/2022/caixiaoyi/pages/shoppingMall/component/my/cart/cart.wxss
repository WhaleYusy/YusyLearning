/* pages/shoppingMall/component/my/cart/cart.wxss */
.van-stepper input{
  color: #000 !important;
}
.header{
  display:flex;
  align-items: center;
  position:fixed;
  top:70rpx;
  height: 75rpx;
  font-size: 24rpx;
  z-index: 1000;
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #eee;
  justify-content: flex-end;
}
.toAdminIcon{
  padding: 20rpx;
}
.toAdminCenter{
  flex:1;
  padding:20rpx 10rpx;
  text-align: center;
}
.toAdmin{
  padding: 20rpx;
}
.cartcontent{
  margin-top:150rpx;
  margin-bottom:80rpx;
}
.bottom {
  box-sizing: border-box;
  padding: 28rpx;
}
.bottom .no-address {
  width: 100%;
  height: 100%;
  /* border-top: 15rpx solid #f7f7f7; */
  box-sizing: border-box;
  display: flex;
  padding-top: 176rpx;
  position: relative;
}
.bottom .no-address .no-box {
  box-sizing: border-box;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.bottom .no-address .no-box image {
  margin: auto;
  width: 207rpx;
  height: 241rpx;
}
.bottom .no-address .no-box p {
  text-align: center;
  color: #aaaaaa;
  font-size: 24rpx;
  padding-top: 30rpx;
}
.bottom .loading-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  overflow: hidden;
}
.bottom .loading-box .loading {
  margin: auto;
}
.bottom .flex {
  border-radius: 10rpx;
  background: white;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}
.bottom .flex .time {
  font-size: 24rpx;
  color: #666666;
  height: 60rpx;
  display: flex;
  align-items: center;
  padding: 0 60rpx;
  position: relative;
  border-bottom: 2rpx solid #f7f7f7;
  box-sizing: border-box;
}
.bottom .flex .time .invalid {
  position: absolute;
  right: 28rpx;
  top: 50%;
  font-size: 24rpx;
  transform: translateY(-50%);
}
.bottom .flex .cart-box {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  width: 100%;
  height: 237rpx;
  padding: 0 10rpx;
}
.bottom .flex .cart-box .left-box {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  padding-left: 5rpx;
  box-sizing: border-box;
}
.bottom .flex .cart-box .left-box .checked {
  display: flex;
  align-items: center;
  font-size: 36rpx !important;
  color: #e20001;
}
.bottom .flex .cart-box .left-box .icons {
  display: flex;
  align-items: center;
  border: 2rpx solid #cccccc;
  border-radius: 100%;
  width: 28rpx;
  height: 28rpx;
}
.bottom .flex .cart-box .center-box {
  width: 160rpx;
  border-radius: 20rpx;
}
.bottom .flex .cart-box .center-box image {
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
}
.bottom .flex .cart-box .right-box {
  flex: 1;
  padding: 23rpx;
  box-sizing: border-box;
}
.bottom .flex .cart-box .right-box .title {
  color: #1a1a1a;
  font-size: 24rpx;
  line-height: 35rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.bottom .flex .cart-box .right-box .msg {
  color: #7d7d7d;
  font-size: 24rpx;
  margin-top: 28rpx;
}
.bottom .flex .num-box {
  display: flex;
  align-items: center;
  padding: 0 28rpx 28rpx;
  box-sizing: border-box;
}
.bottom .flex .num-box .num-box-left {
  width: 212rpx;
}
.bottom .flex .num-box .num-box-center {
  font-size: 24rpx;
  color: #e20001;
  flex: 1;
}
.bottom .flex .num-box .num-box-right {
  width: 300rpx;
  display: flex;
  justify-content: flex-end;
}
.bottom .flex .num-box .num-box-right .stepper {
  height: 60rpx;
  box-sizing: border-box;
}
.bottom .flex .num-box .num-box-right .stepper .van-stepper {
  height: 60rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  overflow: hidden;
}
.bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__minus, .bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__plus {
  height: 60rpx !important;
  width: 60rpx;
  box-sizing: border-box;
}
.bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__minus::before, .bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__plus::before {
  width: 30rpx;
  height: 2rpx;
}
.bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__plus::after {
  width: 2rpx;
  height: 25rpx;
}
.bottom .flex .num-box .num-box-right .stepper /deep/ .van-stepper__input {
  min-width: 70rpx;
  height: 60rpx !important;
  border: 0;
  margin: 0.01333rem;
  background-color: #f2f3f5;
  border-width: 0.01333rem 0;
  border-radius: 0;
  box-sizing: content-box;
  font-size: 28rpx;
  vertical-align: middle;
  text-align: center;
}
.bottom .flex:last-of-type {
  margin-bottom: 0rpx;
}
.bottom .load-more {
  background: white;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  display: flex;
  height: 70rpx;
  border-radius: 10rpx;
}
.bottom .load-more .more-box {
  margin: auto;
  font-size: 24rpx;
  color: #616161;
}

.bottom-height {
  height: calc(100% - 75rpx);
}

.footer {
  width: 100%;
  height: 98rpx;
  box-sizing: border-box;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 10rpx 28rpx;
  z-index:1000;
}
.footer .left {
  width: 245rpx;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
}
.footer .left .checked-box {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}
.footer .left .checked-box .checked {
  display: flex;
  align-items: center;
  font-size: 36rpx !important;
  margin-right: 11rpx;
  color: #e20001;
  box-sizing: border-box;
}
.footer .left .checked-box .icon {
  margin: auto 15rpx 0 0;
  border: 2rpx solid #cccccc;
  border-radius: 100%;
  width: 28rpx;
  height: 28rpx;
  text-align: center;
}
.footer .left-flex {
  flex: 1;
}
.footer .center {
  flex: 1;
  font-size: 24rpx;
  color: #1a1a1a;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 28rpx;
}
.footer .center text {
  color: #e20001;
}
.footer .right {
  /* width: 110rpx; */
  display: flex;
  align-items: center;
}
.footer .right .del {
  width: 110rpx;
  background: #0200fb;
  color: white;
  border-radius: 18rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
}
.footerAdmin{
  display:flex;
  justify-content: center;
  align-items: center;
}
