    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index5}}" bindchange="chooseLayer5" class="picker" wx:if="{{select == 5}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banTonghou}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index6}}" bindchange="chooseLayer6" class="picker" wx:if="{{select == 6}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banCover}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index7}}" bindchange="chooseLayer7" class="picker" wx:if="{{select == 7}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banPendu}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index8}}" bindchange="chooseLayer8" class="picker" wx:if="{{select == 8}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banTest}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index9}}" bindchange="chooseLayer9" class="picker" wx:if="{{select == 9}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banPostTime}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>
    <button bindtap="sureChoose">确定</button>
</view>
