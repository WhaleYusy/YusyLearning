          <option value="过孔盖油">过孔盖油</option>
          <option value="过孔开窗">过孔开窗</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>焊盘喷镀： </text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banPendu" data-select="7" value="{{submitDataPage2.padSpraying}}"/>
        <!-- <select name="" id="" class="select_box" value="submitDataPage2.padSpraying">
          <option value="有铅喷锡">有铅喷锡</option>
          <option value="无铅喷锡">无铅喷锡</option>
          <option value="沉金">沉金</option>
        </select> -->
      </view>
    </view>
    <view class="second_step_box">
      <p class="cont_title">其他选项</p>
      <view class="cont_content cont_content_o">
        <text>飞针测试：</text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banTest" data-select="8"
        value="{{submitDataPage2.test}}"/>
        <!-- <select name="" id="" class="select_box" value="submitDataPage2.test">
          <option value="全部测试">全部测试</option>
          <option value="抽测">抽测</option>
          <option value="不用测试">不用测试</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>发货时间： </text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banPostTime" data-select="9" value="{{submitDataPage2.delivery}}"/>
        <!-- <select name="" id="" class="select_box" value="submitDataPage2.delivery">
          <option value="12H">12H</option>
          <option value="24H">24H</option>
          <option value="48H">48H</option>
          <option value="3-4天">3-4天</option>
          <option value="5-6天">5-6天</option>
        </select> -->
      </view>
    </view>
    <view class="next_step" catchtap="goNext">计算总价</view>
  </view>
</view>
<tabBar></tabBar>
<!-- 滚动选择 -->
<view class="layer" wx:if="{{showBoardLayer}}" ><!--- -->
    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index1}}" bindchange="chooseLayer1" class="picker" wx:if="{{select == 1}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banNum}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index2}}" bindchange="chooseLayer2" class="picker" wx:if="{{select == 2}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banThick}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index3}}" bindchange="chooseLayer3" class="picker" wx:if="{{select == 3}}">
        <picker-view-column>
            <view  style="line-height: 50px;text-align:center" wx:for="{{banColor}}" wx:key="{{index}}" >{{item}}</view>
        </picker-view-column>
    </picker-view>

    <picker-view indicator-style="height: 50px;" style="width: 400rpx; height: 400rpx;" value="{{index4}}" bindchange="chooseLayer4" class="picker" wx:if="{{select == 4}}">
