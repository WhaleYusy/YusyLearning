        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banNum" data-select="1" value="{{submitDataPage2.panelization}}"/>
        <!-- <select name="" id=""  class="select_box select_box_o" value="submitDataPage2.panelization">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>板子厚度：</text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banThick" data-select="2" value="{{submitDataPage2.depth}}"/>
        <!-- <select name="" id=""  class="select_box select_box_o" value="submitDataPage2.depth">
          <option value="1.6">1.6</option>
          <option value="0.4">0.4</option>
          <option value="0.6">0.6</option>
          <option value="0.8">0.8</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>阻焊颜色：</text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banColor" data-select="3" value="{{submitDataPage2.soldermaskColor}}"/>
        <!-- <select name="" id="" class="select_box" value="submitDataPage2.soldermaskColor">
          <option value="红色">红色</option>
          <option value="黄色">黄色</option>
          <option value="蓝色">蓝色</option>
          <option value="绿色">绿色</option>
          <option value="黑色">黑色</option>
          <option value="白色">白色</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>字符颜色： </text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banCodeColor" data-select="4" value="{{submitDataPage2.charColor}}"/>
        <!-- <select name="" id="" class="select_box" value="submitDataPage2.charColor">
          <option value="白色">白色</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>铜厚： </text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banTonghou" data-select="5" value="{{submitDataPage2.copperThickness}}"/>
