          <option value="1">1盎司</option>
          <option value="2">2盎司</option>
        </select> -->
      </view>
      <view class="cont_content cont_content_o">
        <text>阻焊覆盖： </text>
        <image src="http://qiniuoss.822644.com/wxPic/20191125/767336340881707008.blob" class="icon_img" />
        <input class="select_box select_box_o " readonly catchtap="showBoard" data-index="banCover" data-select="6" value="{{submitDataPage2.soldermaskCover}}"/>
