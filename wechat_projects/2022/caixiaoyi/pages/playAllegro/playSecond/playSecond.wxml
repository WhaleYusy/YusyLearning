<!--pages/playAllegro/playSecond/playSecond.wxml-->
<view class="playSecondContent">
    <view class="second_step_big_box">
    <view class="second_step_box">
      <p class="cont_title">基本信息</p>
      <view class="cont_content">
        <text>板子数量：</text>
        <text>{{submitDataPage2.pcbNum}}</text>
      </view>
      <view class="cont_content">
        <text>板子层数：</text>
        <text>{{submitDataPage2.layerNum}}</text>
      </view>
      <view class="cont_content">
        <text>板子宽度：</text>
        <text>{{submitDataPage2.pcbWide}}厘米</text>
      </view>
      <view class="cont_content">
        <text>板子长度：</text>
        <text>{{submitDataPage2.pcbLong}}厘米</text>
      </view>
    </view>
    <view class="second_step_box">
      <p class="cont_title">板子工艺</p>
      <view class="cont_content cont_content_o">
