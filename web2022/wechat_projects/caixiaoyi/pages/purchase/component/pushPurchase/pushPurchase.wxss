  .catchQrcode{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 20rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 16rpx;
  }
  .catchCon{
    text-align: center;
    letter-spacing: 4rpx;
    font-size: 32rpx;
    line-height: 64rpx;
  }
  .catchCon .blue{
    color: blue;
    font-weight: 600;
  }
.qrCode{
  width: 65vw;
  height: 65vw;
  display: block;
  margin: 15rpx auto;
  margin-top: 50px;
}
.pushPurchase-box{
  width: 100%;
  padding-bottom: 20rpx;
  margin-bottom: 140rpx;
  box-sizing: border-box;
}
.pushPurchase-item-box{
  width: 100%;
  padding:  20rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}
.text_line{
  width: 100%;
  min-height: 100rpx;
  display: flex;
  border-bottom: 2rpx solid #eee;
  font-size: 30rpx;
  position: relative;
  background: white;
}
.code_tips{
  font-size: 26rpx;
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  color: red;
}
.line_name{
  width: 21%;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  text-align: left;
}
.line_content{
  width: 70%;
  display: flex;
  position: relative;
  flex-wrap: wrap;
  align-items: center;
}
.line_content-tips{
  position: absolute;
  top: 0;
  left: 20rpx;
  color: #ccc;
}
.radioInfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.line_content input,.line_content textarea{
  width: 97%;
  font-size: 28rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.line_content input{
  height: 100%;
}
.line_content textarea{
  padding-top: 35rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.confirm_btn{
  width: 80%!important;
  background: red;
  min-height: 60rpx!important;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 40rpx auto;
  border-radius: 60rpx;
  color: white;
  padding:0;
}
.upload_img{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  font-size:80rpx;
  text-align:center;
  line-height:140rpx;
  font-weight:100;
  border:1rpx dashed #ccc;
  margin:4rpx 0 ;
  margin-right: 6rpx;
  border-radius:10rpx;
}
.upload_img_o{
  width: 150rpx;
  height: 50rpx;
  line-height:50rpx;
  font-size: 28rpx;
}
.line_content-box{
  width: 150rpx;
  height: 150rpx;
  margin:4rpx 0 ;
  margin-right: 6rpx;
  position: relative;
}
.line_content-box-o{
  width: 100%;
  height: 50rpx;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.file-name{
  width: 360rpx;
  display: inline-block;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;  
}
.close{
  position: absolute;
  top: -5rpx;
  right: 5rpx;
}
.text_img{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius:10rpx;
}
.apply_box{
  width: 98%;
  margin: 10rpx auto;
  border-radius: 10rpx;
  padding:60rpx 90rpx 20rpx;
  box-sizing: border-box;
}
.icon_text{
  font-size: 160rpx;
  color: #d81e06;
}
.apply_detail{
  display: flex
}
.apply_tips{
  height: 200rpx;
  padding-top: 60rpx;
  font-size: 40rpx;
}
.because_of_box{
  width: 100%;
}
.apply_btn_line{
  width: 100%;
  height: 100rpx;
  margin-top:30rpx; 
  display: flex
}
.apply_btn_line button{
  display: inline-block;
  width: 50%;
  height: 90rpx;
}
.btn1{
  margin-right: 10rpx;
  background: #d81e06;
  color: white;
  line-height: 90rpx;
  font-size: 30rpx;
}
.btn2{
  border: 2rpx solid #ccc;
  line-height: 90rpx;
  font-size: 30rpx;
}
.btn3{
  background:red;
  color:#fff;
  margin-left:20rpx;
  border:none;
}
.catoLayer{
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  top:0;
  background:rgba(0,0,0,0.5);
  z-index:500;
}
.catoLayer .fir{
  display:flex;
  flex-direction: column;
  background:white;
  width:350rpx;
  height:calc(100vh - 98rpx);
  font-size:26rpx;
  overflow-y: auto;
  position: relative;
  border-right:2rpx solid #f8f8f8;
  box-sizing: border-box;
}
.catoLayer  .fir li{
  /* border-bottom:2rpx solid #e8e8e8; */
  text-align: center;
  height:60rpx;
  line-height:60rpx;
}
.catoLayer .sec{
  position: fixed;
  left:350rpx;
  top:55rpx;
  background:white;
  width:350rpx;
  color:#333333;
  display:flex;
  flex-direction: column;
  background:white;
  height:calc(100vh - 152rpx);
  font-size:26rpx;
  overflow-y: auto;
}
.active-class{
  color:#3A8BEE !important;
}