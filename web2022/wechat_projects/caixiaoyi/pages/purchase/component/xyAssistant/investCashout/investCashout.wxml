<van-popup show="{{ ppshow }}" bind:close="onppClose" closeable="true" custom-style="height: 66.6vh;width:90%;padding:20rpx;">
        <view class="cashout-title">提 现</view>
        <view class="cashout-tip">
          本次手续费{{userInfo.serviceCharge}}%, 升级会员手续费低至15%
          <span bindtap="onGoto">(点击此处升级)</span>
        </view>
        <view class="wi-flex">
          <view class="wi-item">提现积分：{{cashOutMoney}}</view>
        </view>
        <view class="wi-flex">
          <view class="wi-item">实名验证：{{userInfo.realName || '未绑定实名'}}</view>
          <view
            class="go-binding"
            wx:if="{{userInfo.realName == null || userInfo.realName == ''}}"
            bindtap="goBindingInfo"
          >去绑定</view>
        </view>
        <view class="wi-flex">
          <view class="wi-item">
           <text>手机号码：</text>
            <input
              type="text"
              class="wi-input br"
              placeholder="未绑定手机号码"
              value="{{userInfo.payTelephone}}"
              disabled
            />
          </view>
          <view
            class="go-binding"
            wx:if="{{userInfo.payTelephone == '' || userInfo.payTelephone == null}}"
            bindtap="goBindingInfoP"
          >去绑定</view>
        </view>
        <view class="wi-flex">
          <view class="wi-item">
            输入验证码：
            <input
              type="text"
              class="wi-code"
              placeholder="请输入验证码"
              maxlength="6"
              bindinput="onCode"
              value="{{code}}"
            />
          <view class="wi-count-down {{isDisabled ? 'wi-count-down-bg' : ''}}" bindtap="onCodeClick" >{{codeTxt}} </view>
          </view>
        </view>
        <view class="wi-btns">
          <view class="btn1" bindtap="onppClose">取消</view>
          <view class="btn2" bindtap="onWiPopupSubmit">确认</view>
        </view>
</van-popup>