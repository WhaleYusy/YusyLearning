}
.bottom{
  display:flex;
  height:80rpx;
}
.bottom .item-box {
  height: 100%;
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}
 .bottom .item-btn1 {
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  background: #6766fd;
}
 .bottom .item-btn2 {
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  background: #0200fb;
}
 .bottom .item-btn3 {
  border-radius: 40rpx;
  background: #0200fb;
}
 .top .stepper .van-stepper {
  height: 60rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  overflow: hidden;
}
.attr-popup .top /deep/ .van-stepper__minus,
