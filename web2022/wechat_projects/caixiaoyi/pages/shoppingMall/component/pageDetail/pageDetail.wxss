.attr-popup .top /deep/ .van-stepper__plus::before {
  width: 30rpx;
  height: 2rpx;
}
.attr-popup .top /deep/ .van-stepper__plus::after {
  width: 2rpx;
  height: 25rpx;
}
.attr-popup .top /deep/ .van-stepper__input {
  min-width: 70rpx;
  height: 60rpx !important;
  border: 0;
  margin: 0.01333rem;
  background-color: #f2f3f5;
  border-width: 0.01333rem 0;
  border-radius: 0;
  box-sizing: content-box;
  font-size: 28rpx;
  vertical-align: middle;
  text-align: center;
}

