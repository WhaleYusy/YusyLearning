/* pages/shoppingMall/component/my/address/addressList/addressList.wxss */
.addressListContent{
  margin-bottom:90rpx;
  min-height:calc(100vh - 90rpx);
  background:#f8f8f8;
}
  .top {
    height: 70rpx;
    box-sizing: border-box;
  }
  .bottom {
    height: calc(100% - 70rpx);
    box-sizing: border-box;
    overflow: hidden;
  }
  .bottom .no-address {
    width: 100%;
    height: 90vh;
    border-top: 15rpx solid #f7f7f7;
    box-sizing: border-box;
    background: white;
    overflow: hidden;
    display: flex;
    padding-top: 176rpx;
    position: relative;
  }
  .bottom .no-address .no-box {
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .bottom .no-address .no-box img {
    margin: auto;
    width: 207rpx;
    height: 241rpx;
  }
  .bottom .no-address .no-box p {
    text-align: center;
    color: #aaaaaa;
    font-size: 24rpx;
    padding-top: 30rpx;
  }
  .bottom .address-list {
    box-sizing: border-box;
    margin-bottom: 20rpx;
    width: 100%;
    height: 100%;
    overflow: auto;
  }
  .bottom .address-list .loading-box {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    overflow: hidden;
  }
  .bottom .address-list .loading-box .loading {
    margin: auto;
  }
  .bottom .address-list .flex {
    box-sizing: border-box;
    height: 260rpx;
    width: 100%;
    background: white;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
  }
  .bottom .address-list .flex .top-warp {
    flex: 1;
    box-sizing: border-box;
    display: flex;
    width: 100%;
  }
  .bottom .address-list .flex .top-warp .top-box {
    width: 100%;
    margin: auto;
    display: flex;
    padding: 0 28rpx;
  }
  .bottom .address-list .flex .top-warp .top-box .left {
    flex: 1;
  }
  .bottom .address-list .flex .top-warp .top-box .left .title {
    color: #1a1a1a;
    font-size: 32rpx;
  }
  .bottom .address-list .flex .top-warp .top-box .left .title span {
    margin-left: 28rpx;
  }
  .bottom .address-list .flex .top-warp .top-box .left .address-info {
    font-size: 24rpx;
    line-height: 36rpx;
    color: #292621;
    margin-top: 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  .bottom .address-list .flex .top-warp .top-box .right {
    width: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }
  .bottom .address-list .flex .top-warp .top-box .right i {
    font-size: 42rpx;
    color: #e20001;
  }
  .bottom .address-list .flex .top-warp .top-box .right .btn {
    border: 2rpx solid #8a857c;
    font-size: 24rpx;
    color: #8a857c;
    border-radius: 23rpx;
    height: 46rpx;
    width: 100rpx;
    line-height: 46rpx;
    text-align: center;
  }
  .bottom .address-list .flex .bottom-warp {
    box-sizing: border-box;
    height: 90rpx;
    display: flex;
    padding: 0 28rpx;
    border-top: 2rpx solid #f7f7f7;
  }
  .bottom .address-list .flex .bottom-warp .bottom-left {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #8a857c;
  }
  .bottom .address-list .flex .bottom-warp .bottom-left .icon {
    width: 28rpx;
    height: 28rpx;
    border-radius: 100%;
    border: 2rpx solid #b0a99e;
    margin-right: 15rpx;
  }
  .bottom .address-list .flex .bottom-warp .bottom-left .icon-active {
    background: #e20001;
    border-color: #e20001;
  }
  .bottom .address-list .flex .bottom-warp .bottom-active {
    color: #e20001;
  }
  .bottom .address-list .flex .bottom-warp .bottom-right {
    width: 222rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 24rpx;
    color: #8a857c;
  }
  .bottom .address-list .flex .bottom-warp .bottom-right .btn {
    height: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
  }
  .bottom .address-list .flex .bottom-warp .bottom-right .edit {
    padding-right: 14rpx;
  }
  .bottom .address-list .flex .bottom-warp .bottom-right .del {
    padding-left: 14rpx;
  }
  .bottom .address-list .flex:last-of-type {
    margin-bottom: 20rpx;
  }
  .bottom .load-more {
    background: white;
    border-top: 2rpx solid #f7f7f7;
    border-bottom: 2rpx solid #f7f7f7;
    display: flex;
    height: 70rpx;
    margin: 20rpx 0;
  }
  .bottom .load-more .more-box {
    margin: auto;
    font-size: 24rpx;
    color: #616161;
  }
  
