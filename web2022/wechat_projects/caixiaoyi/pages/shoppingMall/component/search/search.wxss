/* pages/shoppingMall/component/search/search.wxss */
.searchPage{
  margin-top:70rpx;
}
.public-warp {
    box-sizing: border-box;
    /* height: calc(100vh - 165rpx); */
    margin-bottom: 100rpx;
  }
  .public-warp .top {
    height: 90rpx;
    box-sizing: border-box;
    background: white;
    display: flex;
    align-items: center;
    padding: 12rpx 28rpx;
  }
  .public-warp .top .left {
    height: 70rpx;
    width: 50rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
  }
  .public-warp .top .left i {
    font-size: 28rpx;
  }
  .public-warp .top .center {
    border: 2rpx solid #cccccc;
    border-right: none;
    flex: 1;
    height: 100%;
    font-size: 24rpx;
    border-top-left-radius: 5rpx;
    border-bottom-left-radius: 5rpx;
    margin-right:10rpx;
    box-sizing: border-box;
  }
  .public-warp .top .center input {
    width: 90%;
    height: 100%;
    border: none;
    outline: none;
    padding: 0 15rpx;
    margin-right:15rpx;
    box-sizing: border-box;
  }
  .public-warp .top .right {
    width: 100rpx;
    box-sizing: border-box;
    height: 100%;
    font-size: 24rpx;
    color: white;
    display: flex;
    border-top-right-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
    background: #0303fe;
  }
  .public-warp .top .right .btn {
    margin: auto;
  }
  .public-warp .top .search {
    opacity: 0.5;
  }
  .public-warp .bottom {
    height: calc(100% - 90rpx);
    box-sizing: border-box;
    overflow: auto;
    padding: 20rpx 28rpx;
  }
  .public-warp .bottom .loading-box {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    overflow: hidden;
  }
  .public-warp .bottom .loading-box .loading {
    margin: auto;
  }
  .public-warp .bottom .list-warp {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
  .public-warp .bottom .list-warp .no-address {
    width: 100%;
    height: calc(100vh - 150rpx);
    border-top: 15rpx solid #f7f7f7;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    padding-top: 176rpx;
    position: relative;
  }
  .public-warp .bottom .list-warp .no-address .no-box {
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .public-warp .bottom .list-warp .no-address .no-box image {
    margin: auto;
    /* width: 207rpx;
    height: 241rpx; */
    width: 400rpx;
    height: 400rpx;
  }
  .public-warp .bottom .list-warp .no-address .no-box p {
    text-align: center;
    color: #aaaaaa;
    font-size: 24rpx;
    padding-top: 30rpx;
  }
  .public-warp .bottom .list-warp .list-flex {
    margin-bottom: 20rpx;
    background: white;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    border-radius: 10rpx;
    padding: 15rpx;
  }
  .public-warp .bottom .list-warp .list-flex .left {
    width: 160rpx;
    height: 160rpx;
    box-sizing: border-box;
  }
  .public-warp .bottom .list-warp .list-flex .left image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
  }
  .public-warp .bottom .list-warp .list-flex .right {
    flex: 1;
    box-sizing: border-box;
    display: flex;
    align-items: center;
  }
  .public-warp .bottom .list-warp .list-flex .right .box {
    padding: 0 15rpx;
  }
  .public-warp .bottom .list-warp .list-flex .right .box .title {
    line-height: 35rpx;
    font-size: 24rpx;
    display: -webkit-box;
    overflow: hidden;
    word-wrap: break-word;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .public-warp .bottom .list-warp .list-flex .right .box .price {
    margin-top: 28rpx;
    font-size: 24rpx;
    color: #e20001;
  }
  .public-warp .bottom .list-warp .load-more {
    margin: 20rpx 0;
    background: white;
    border-top: 2rpx solid #f7f7f7;
    border-bottom: 2rpx solid #f7f7f7;
    display: flex;
    height: 70rpx;
    border-radius: 3rpx;
  }
  .public-warp .bottom .list-warp .load-more .more-box {
    margin: auto;
    font-size: 24rpx;
    color: #616161;
  }
  
