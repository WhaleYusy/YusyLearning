.recommend .load-more {
  margin: 0 28rpx 28rpx 28rpx;
  background: white;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  display: flex;
  height: 70rpx;
  border-radius: 10rpx;
}
.recommend .load-more .more-box {
  margin: auto;
  font-size: 24rpx;
  color: #616161;
