            <view style="margin:20rpx 0;width:100%;">
              <textarea style="font-size:28rpx;width:100%;" placeholder="请输入岗位职责" value="{{param.jobRemarkContent}}" bindinput="onTextInput2" />
            </view>
            <view class="upload-img">
              <block tt:if="{{param.jobRemarkImage.length>0}}" tt:for="{{param.jobRemarkImage}}">
                <view class="upload-img-li">
                  <image src="{{item}}" alt="" />
                  <view class="upload-img-cha" catchtap="removeImage4" data-index="{{index}}">×</view>
