            <view style="margin:20rpx 0;width:100%;">
              <textarea style="font-size:28rpx;width:100%;" placeholder="请输入任职要求" value="{{param.contentContent}}" bindinput="onTextInput" />
            </view>
            <view class="upload-img">
              <block tt:if="{{param.contentImage.length>0}}" tt:for="{{param.contentImage}}">
                <view class="upload-img-li">
                <image src="{{item}}" alt="" />
                  <view class="upload-img-cha" catchtap="removeImage3" data-index="{{index}}">×</view>
                </view>
              </block>
              <view class="upload-icon" catchtap="chooseImage3">+</view>
            </view>
          </view>
          <view class="flex">
            <view class="left">岗位职责：</view>
          </view>
