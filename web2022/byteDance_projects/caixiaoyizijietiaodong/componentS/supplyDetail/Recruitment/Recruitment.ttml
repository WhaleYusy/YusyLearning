<!--componentS/supplyDetail/Recruitment/Recruitment.ttml-->
<view class="main_content" style="margin:20rpx auto;">
    <view class="content_box">
      <view class="content_card" tt:for="{{dynamicList}}" tt:key="{{index}}" data-item='{{item}}' catchtap="goToDetails" data-us="{{userStatus}}">
        <view class="left-box">
          <view class="l-img">
            <image src="{{item.supplierLogo}}" alt />
          </view>
        </view>
        <view class="right-box">
          <view class="r-place r-font-size">
            <font>招聘岗位：</font>
            <span class="r-title">{{item.job}}</span>
          </view>
          <view class="r-company r-font-size">{{item.companyName}}</view>
          <view class="r-num r-font-size">
            <font>招聘人数：</font>
            {{item.recruitmentPersons}}人
            <font>薪资：</font>
            {{item.salaryRange}}
          </view>
          <view class="r-place r-font-size">
            <font>工作地点:</font>
            {{item.workAddress || ""}}
          </view>
          <view class="r-fabric r-font-size">
            <font>生产产品:</font>
            {{item.project == "" || item.project == null ? '无' : item.project}}
          </view>
        </view>
        <view class="r-msg" catchtap="onModify" data-item="{{item}}" tt:if="{{userStatus == 1}}">修改</view>
      </view>
    </view>
    <view class="add" tt:if="{{userStatus == 1}}">
      <view class="br" catchtap="onAddClick">
        <p class="icon">+</p>
      </view>
    </view>

    <!-- 新增弹窗 -->
    <view class="popus-mb" tt:if="{{isShow}}">
      <view class="popus-box">
        <view class="close-warp">
          <view class="close-title">人才招聘</view>
          <view class="close" catchtap="onCloseClick">X</view>
        </view>
        <view class="flex-warp">
          <view class="flex">
            <view class="left">公司地址：</view>
            <view class="right">
              <input placeholder="请输入公司所在城市" value="{{param.workAddress}}" maxlength="18" bindinput="saveValue" data-key="workAddress"/>
            </view>
          </view>
          <view class="flex">
            <view class="left">招聘职位：</view>
            <view class="right">
              <input placeholder="请输入职位名称" value="{{param.job}}" maxlength="18" 
              bindinput="saveValue" data-key="job"/>
            </view>
          </view>
          <view class="flex">
            <view class="left">薪资水平：</view>
            <view class="right">
              <input placeholder="请输入薪资(如:10k-100k)" value="{{param.salaryRange}}" maxlength="10" bindinput="saveValue" data-key="salaryRange" />
            </view>
          </view>
          <view class="flex">
            <view class="left">招聘人数：</view>
            <view class="right">
              <input placeholder="请输入招聘人数" value="{{param.recruitmentPersons}}" ref="inputNum" type="text" bindinput="saveValue" data-key="recruitmentPersons" maxlength="2" />
            </view>
          </view>
          <view class="flex">
            <view class="left">任职要求：</view>
          </view>
